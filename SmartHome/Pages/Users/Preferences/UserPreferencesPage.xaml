<Page x:Class="SmartHome.Pages.Users.Preferences.UserPreferencesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartHome.Pages.Users.Preferences"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPreferencesPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Name="UsersCurrentText" Text="Пользователь" FontSize="16" Margin="5"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
            <TextBlock Text="Введите название" HorizontalAlignment="Left" FontSize="14" Margin="5"/>
            <TextBox x:Name="SearchUsersPreferencesName" HorizontalAlignment="Right"
                TextChanged="SearchUsersPreferencesName_TextChanged" Width="135" Margin="5"/>

            <TextBlock Text="Сортировать" HorizontalAlignment="Left" FontSize="14" Margin="5"/>
            <ComboBox x:Name="SortUsersPreferencesCategory" HorizontalAlignment="Right"
                DisplayMemberPath="NameOfCategory" SelectedIndex="0" SelectionChanged="SortUsersPreferencesCategory_SelectionChanged" Width="265" Margin="5">
                <ComboBox.ItemsSource>
                    <CompositeCollection>
                        <CollectionContainer Collection="{Binding UsersPreferencesCategories}"/>
                    </CompositeCollection>
                </ComboBox.ItemsSource>
            </ComboBox>

            <Button x:Name="CleanFilter" Content="Очистить фильтр" FontSize="10" Click="CleanFilter_OnClick" Margin="5"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5">
            <Button Content="Добавить" Width="100" Margin="5" Click="AddUsersPreferences_Click" />
            <Button Content="Редактировать" Width="100" Margin="5" Click="EditUsersPreferences_Click" />
            <Button Content="Удалить" Width="100" Margin="5" Click="DeleteUsersPreferences_Click" Style="{StaticResource RedButtonStyle}" />
            <Button Content="Обновить" Width="100" Margin="5" Click="RefreshUsersPreferences_Click" />
        </StackPanel>

        <ListView Grid.Row="3" Name="ListViewUsersPreferences">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID настройки" DisplayMemberBinding="{Binding preference_id}" Width="100"/>
                    <GridViewColumn Header="Настройка" DisplayMemberBinding="{Binding preference_name}" Width="150"/>
                    <GridViewColumn Header="Значение" DisplayMemberBinding="{Binding preference_value}" Width="150"/>
                    <GridViewColumn Header="Дата создания" DisplayMemberBinding="{Binding created_at, StringFormat={}{0:dd.MM.yyyy HH:mm}}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
