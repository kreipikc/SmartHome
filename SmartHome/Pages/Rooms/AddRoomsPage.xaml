<Page x:Class="SmartHome.Pages.Rooms.AddRoomsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartHome.Pages.Rooms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddRoomsPage">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Название комнаты:" Margin="0,0,0,5"/>
            <TextBox Name="RoomTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Этаж:" Margin="0,0,0,5"/>
            <TextBox Name="FloorTextBox" Margin="0,0,0,10"/>

            <Grid>
                <Button DockPanel.Dock="Left" Content="Сохранить" Width="100" HorizontalAlignment="Left" Margin="0,20,0,0" Click="Create_Click"/>
                <Button DockPanel.Dock="Right" Name="Cancel" Content="Отмена" Width="100" HorizontalAlignment="Right" Margin="0,20,0,0" Click="Cancel_Click" Style="{StaticResource RedButtonStyle}"/>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
