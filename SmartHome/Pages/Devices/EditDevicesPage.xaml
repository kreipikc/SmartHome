<Page x:Class="SmartHome.Pages.Devices.EditDevicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartHome.Pages.Devices"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditDevicesPage">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="ID:" Margin="0,0,0,5"/>
            <TextBox Name="IdTextBox" Margin="0,0,0,10" IsReadOnly="True"/>

            <TextBlock Text="Название:" Margin="0,0,0,5"/>
            <TextBox Name="NameTextBox" Margin="0,0,0,10"/>

            <CheckBox Name="StatusCheckBox" Content="Статус" Margin="0,0,0,10"/>

            <ComboBox Name="RoomsComboBox" DisplayMemberPath="room_name" SelectedValuePath="room_id" Margin="0,0,0,10"/>

            <Grid>
                <Button DockPanel.Dock="Left" Content="Сохранить" Width="100" HorizontalAlignment="Left" Margin="0,20,0,0" Click="Update_Click"/>
                <Button DockPanel.Dock="Right" Name="Cancel" Content="Отмена" Width="100" HorizontalAlignment="Right" Margin="0,20,0,0" Click="Cancel_Click" Background="Red"/>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
